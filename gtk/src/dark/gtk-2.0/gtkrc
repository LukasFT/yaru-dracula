# Based on Bridge by ScionicSpectre
# vim:set ts=2 sw=2 sts=2 ai et:
#
# This is the GTK+ 2 version of Adwaita. It's whole purpose is to look as the
# GTK+ 3 version as much as possible until GTK+ 2 dies completely.
#
# Note: comments for explaining styles are on the bottom of each file beside the
# widget matches.

# Declare the colours used throughout the theme.
# There shouldn't be any fiddling with them in the theme files themselves in
# order to not mess up the dark theme.

# Text/base
gtk-color-scheme = "text_color:#f8f8f2\nbase_color:#282a36"
# Foreground/background
gtk-color-scheme = "fg_color:#f8f8f2\nbg_color:#282a36"
#Â Selected foreground/background
gtk-color-scheme = "selected_fg_color:#f8f8f2\nselected_bg_color:#44475a"
# Insensitive foreground/background
gtk-color-scheme = "insensitive_fg_color:#6272a4\ninsensitive_bg_color:#44475a"
# Menus
gtk-color-scheme = "menu_color:#282a36\nmenubar_bg:#282a36"
gtk-color-scheme = "menubar_fg:#f8f8f2\nmenubar_insensitive_fg:#6272a4"
# Links
gtk-color-scheme = "link_color:#ff79c6\nvisited_link_color:#bd93f9"
# Treeview headers
gtk-color-scheme = "column_header_color:#f8f8f2\nhover_column_header_color:#f8f8f2"
# Window decoration
gtk-color-scheme = "menu_hover_color:#44475a\nwindow_color:#f8f8f2"
# Tooltips
gtk-color-scheme = "tooltip_fg_color:#f8f8f2\ntooltip_bg_color:#282a36"

# Set GTK settings
gtk-auto-mnemonics              = 1
gtk-primary-button-warps-slider = 1
gtk-icon-sizes="gtk-menu=16,16:\
	gtk-button=16,16:\
	gtk-small-toolbar=16,16:\
	gtk-dnd=16,16:\
	gtk-dialog=16,16"
gtk-toolbar-style = GTK_TOOLBAR_ICONS
gtk-menu-images = 0
gtk-menu-popup-delay = 0

# And hand over the control to the theme files
include "main.rc"
include "apps.rc"
include "hacks.rc"
